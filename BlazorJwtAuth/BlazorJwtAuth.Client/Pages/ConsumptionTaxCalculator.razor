@page "/consumption-tax-calculator"
@using BlazorJwtAuth.Client.Service.Services.Interfaces
@inject IConsumptionTaxCalculator Calculator

<h2>ConsumptionTaxCalculator</h2>

<div class="row">
  <div class="col-2">Price without tax</div>
  <div class="col-10">
    <input type="text" @bind="Price"/>
  </div>
  <input class="col-2 btn btn-primary" type="button" @onclick="Calc" value="Calculate"/>
</div>
<div class="mt-3 p-3 border bg-primary">Price with tax: Â¥@TaxedPrice</div>

@code {
  private int Price { get; set; } = 100;
  private int TaxedPrice { get; set; }

  private void Calc()
  {
    TaxedPrice = Calculator.CalcTotalPrice(Price);
  }

}
