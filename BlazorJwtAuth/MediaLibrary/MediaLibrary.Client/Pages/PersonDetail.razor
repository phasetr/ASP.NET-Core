@page "/persons/{Id:int}"
@using MediaLibrary.Common.Models
<DataForm ApiPath="person" Id="Id" TModel="PersonModel" Context="model">
  <p>
    <label>Name: <InputText @bind-Value="model.Name"/></label>
  </p>
  <p>
    <label>BirthDay: <InputDate @bind-Value="model.BirthDay"/></label>
  </p>
  <p>
    <label>BirthPlace: <InputText @bind-Value="model.BirthPlace"/></label>
  </p>
  <p>
    <label>Biography: <InputTextArea @bind-Value="model.Biography"/></label>
  </p>
</DataForm>

@code {

  [Parameter] public int Id { get; set; }

}
