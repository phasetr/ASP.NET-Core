@typeparam TRowType

<table class="table table-sm table-bordered table-striped">
    @if (Header != null)
    {
        <thead>@Header</thead>
    }
    <tbody>
    @if (RowTemplate != null)
    {
        @foreach (var item in RowData.OrderBy(_ => "Ascending"))
        {
            <tr>@RowTemplate(item)</tr>
        }
    }
    </tbody>
</table>

@code {

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment<TRowType>? RowTemplate { get; set; }

    [Parameter]
    public IEnumerable<TRowType> RowData { get; set; }
        = Enumerable.Empty<TRowType>();

}